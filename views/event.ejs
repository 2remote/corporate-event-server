<!DOCTYPE HTML>
<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <link rel="stylesheet" href="css/blueimp-gallery.min.css">
  <title>
    <%= title %>
  </title>
  <style>
    body {
      font-family: "PingFang SC", "Microsoft Yahei", Arial, sans-serif;
      background: #222;
      color: #fff;
    }

    #blueimp-gallery .play-pause {
      right: 25px;
      bottom: 40px;
    }
    /*.play-pause-text {
      position: absolute;
      right: 15px;
      bottom: 25px;
      width: 30px;
      height: 15px;
      cursor: pointer;
      font-size: 8px;
    }*/

    .blueimp-gallery>.close {
      position: absolute;
      top: 15px;
      right: 15px;
      height: 45px;
      width: 45px;

      font-size: 60px;
      border-radius: 0 0 0 100%;/*分表表示左上角 右上角 右下角 左下角*/
      opacity:0.5;
      background:rgba(255,255,255,0.70);
      color: black;
      text-shadow: 0 0 0px #fff;

      line-height: 20px;
      text-align: right;
    }

    #links {
      width: 1000px;
      margin: 0 auto;
      height: auto;
      text-align: center;
    }

    #links a img {
      width: 20%;
    }

    @media screen and (max-width: 720px) {
      #links {
        width: 100%;
      }
      #links a img {
        width: 30%;
      }
    }

    .footer {
      height: 80px;
      width: 100%;
      background-color: #FFF;
      border: 1px;
      position: fixed;
      bottom: 0;
      left: 0;
      color: #000;
      opacity: 0.8;
      padding: 5px;
      font-weight: bold;
      font-size: 14px;
    }

    .footer .x {
      right: 45px;
      margin: -15px;
      font-size: 30px;
      text-decoration: none;
      cursor: pointer;
      position: absolute;
      margin: 0 0px 0 0;
      font-size: 20px;
      line-height: 30px;
      color: #fff;
      text-shadow: 0 0 2px #000;
      opacity: 0.8;
      color: #000;
      top: 0px;
      z-index: 1000;
    }

    .footer .ewm {
      height: 80px;
      display: inline-block;
      position: absolute;
      border: 0;
      vertical-align: middle;
    }

    .footer .text {
      display: inline-block;
      margin-left: 84px;
      margin-top: 8px;
    }

    .footer .revserse {
      background-color: #000;
      color: #FFF;
      font-size: 16px;
    }

    .tips {
      font-size: 12px;
    }
  </style>
</head>

<body>
  <div style="width:0px; height:0px; overflow:hidden">
    <img src="images/yaopai_updated.jpg">
  </div>
  <footer class="footer" id="footer">
    <div class="x" id="closeFooter">×</div>
    <img class="ewm J_QrCode" src="images/yp_weixin.jpg">
    <span class="text">
      <span class="revserse J_FooterText2">YAOPAI 全球摄影师预约平台</span>
    <br>
    <span class="J_FooterText">回复"<%= wxKeyword %>"，立即查看照片。</span>
    <br>
    <span class="tips">照片经过压缩处理，请放心浏览。</span>
    </span>
  </footer>

  <!-- 加入控制 -->
  <div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="close">×</a>
    <!-- <a class="play-pause-text">自动播放</a> -->
    <!-- <ol class="indicator"></ol> -->
  </div>

  <!-- 加入内容 -->
  <div id="links">
    <% for(var i=0; i<photos.length; i++) {%>
      <a href="<%= photos[i].bigImage %>" title="<%= photos[i].title %>">
            <img class="lazy" data-original="<%= photos[i].thumbnail %>" alt="<%= photos[i].alt %>">
        </a>
      <% } %>
  </div>

  <script src="js/blueimp-gallery.min.js"></script>

  <!-- 加入每个内容的点击响应 -->
  <script>
    document.getElementById('links').onclick = function(event) {
      event = event || window.event;
      var target = event.target || event.srcElement,
        link = target.src ? target.parentNode : target,
        options = {
          index: link,
          displayTransition: false,
          closeOnSwipeUpOrDown: false,
          event: event
        },
        links = this.getElementsByTagName('a');
      blueimp.Gallery(links, options);
    };

    document.getElementById('closeFooter').onclick = function() {
      document.getElementById('footer').style.display = 'none';
    }

    //统计代码
    var _hmt = _hmt || [];
    (function() {
      var hm = document.createElement("script");
      hm.src = "//hm.baidu.com/hm.js?22b6b1b5d65b126d38e09742b734eba6";
      var s = document.getElementsByTagName("script")[0];
      s.parentNode.insertBefore(hm, s);
    })();
  </script>

  <script src="/js/vendor/jquery.js"></script>
  <script src="/js/vendor/jquery.lazyload.js"></script>
  <script>
    $(function() {
      $("img.lazy").lazyload();
    });
  </script>
</body>

</html>
