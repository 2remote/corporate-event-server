<!DOCTYPE HTML>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="css/blueimp-gallery.min.css">
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <!-- 加入控制 -->
    <div id="blueimp-gallery" class="blueimp-gallery">
      <div class="slides"></div>
        <h3 class="title"></h3>
        <a class="prev">‹</a>
        <a class="next">›</a>
        <a class="close">×</a>
        <a class="play-pause"></a>
        <ol class="indicator"></ol>
    </div>

    <!-- 加入内容 -->
    <div id="links">
      <a href="images/rice.jpg" title="rice">
          <img src="images/thumbnails/rice.jpg" alt="rice">
      </a>
      <a href="images/mushroom.jpg" title="mushroom">
          <img src="images/thumbnails/mushroom.jpg" alt="mushroom">
      </a>
      <a href="images/nuddles.jpg" title="nuddles">
          <img src="images/thumbnails/nuddles.jpg" alt="nuddles">
      </a>
    </div>

    <!-- 加入每个内容的点击响应 -->
    <script>
      document.getElementById('links').onclick = function (event) {
          event = event || window.event;
          var target = event.target || event.srcElement,
              link = target.src ? target.parentNode : target,
              options = {index: link, event: event},
              links = this.getElementsByTagName('a');
          blueimp.Gallery(links, options);
      };
    </script>

    </div><script src="js/blueimp-gallery.min.js"></script>
  </body>
</html>
